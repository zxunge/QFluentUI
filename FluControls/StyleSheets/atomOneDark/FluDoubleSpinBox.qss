QDoubleSpinBox {
    background-color: rgb(44, 48, 54);
    border: 1px solid rgb(71, 74, 79);
    border-radius: 4px;
    padding-left: 10px;
    min-height: 30px;
    max-height: 30px;
    min-width: 100px;
    border-bottom: 1px solid rgb(71, 74, 79);
    selection-color: white;
    selection-background-color: rgb(0, 120, 215);
    color: white;
}

QDoubleSpinBox:hover {
    background-color: rgb(50, 54, 60);
}

QDoubleSpinBox:focus {
    color: white;
    border-bottom: 2px solid rgb(71, 74, 79);
}

QDoubleSpinBox::up-button {
    image: url("../res/ControlResImages/SpinBoxUp-Dark.png");
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 4px;
    margin-top: 1px;
    margin-bottom: 1px;
    margin-right: 2px;
    min-width: 20px;
    max-width: 20px;
    min-height: 15px;
}

QDoubleSpinBox::up-button:hover {
    background-color: rgb(50, 54, 60);
}

QDoubleSpinBox::up-button:pressed {
    background-color: rgb(50, 54, 60);
}

QDoubleSpinBox::down-button {
    image: url("../res/ControlResImages/SpinBoxDown-Dark.png");
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 4px;
    margin-top: 1px;
    margin-bottom: 1px;
    margin-right: 2px;
    min-width: 20px;
    max-width: 20px;
    min-height: 15px;
}

QDoubleSpinBox::down-button:hover {
    background-color: rgb(50, 54, 60);
}

QDoubleSpinBox::down-button:pressed {
    background-color: rgb(50, 54, 60);
}

QDoubleSpinBox::drop-down {
    background-color: transparent;
    width: 50px;
}

QDoubleSpinBox:disabled {
    color: rgb(120, 120, 120);
    background-color: rgb(44, 48, 54);
    border: 1px solid rgb(71, 74, 79);
}

QDoubleSpinBox::up-button:disabled {
    image: url("../res/ControlResImages/SpinBoxUpDisabled-Dark.png");
}

QDoubleSpinBox::down-button:disabled {
    image: url("../res/ControlResImages/SpinBoxDownDisabled-Dark.png");
}